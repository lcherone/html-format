{
    "name": "roesch/html-format",
    "type": "library",
    "description": "A simple to use HTML prettifier class written in PHP. Added as a composer library in memory of Bennett Roesch (spyrosoft)",
    "license": "MIT",
    "keywords": [
        "html",
        "format",
        "tidy"
    ],
    "homepage": "https://github.com/lcherone/html-format",
    "authors": [
        {
            "name": "Lawrence Cherone",
            "email": "lawrence@cherone.co.uk",
            "homepage": "https://cherone.co.uk",
            "role": "Maintainer"
        }, {
            "name": "Bennett Roesch",
            "email": "no-reply@spyrosoft.com",
            "homepage": "https://spyrosoft.com",
            "role": "Original Author"
        }
    ],
    "require": {
        "php": "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*"
    },
    "autoload": {
        "psr-4": {
            "Roesch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Roesch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test" : "phpunit --configuration phpunit.xml --coverage-text"
    },
    "minimum-stability": "stable"
}
